<Window x:Class="DeskNote.newNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="newNote" Height="107" Width="207" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="tbNoteName" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TextChanged="tbNoteName_TextChanged" KeyUp="tbNoteName_KeyUp"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="75" Height="27" Click="btnOK_Click" IsEnabled="False"/>
        <Button x:Name="btnCancel" Content="CANCEL" HorizontalAlignment="Left" Margin="117,41,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.24,0.5" Height="27" Click="btnCancel_Click"/>

    </Grid>
</Window>
